<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regdialog"
    android:layout_width="306dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1" >

    <TextView
        android:id="@+id/textViewreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="0dip"
        android:text="请输入您的注册码"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editTextReg"
        android:layout_width="238dp"
        android:layout_height="30dip"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/singlepos_pswblank" />

    <ImageButton
        android:id="@+id/imageButtonReg"
        android:layout_width="140dip"
        android:layout_height="74dip"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dip"
        android:background="@android:color/transparent"
        android:src="@drawable/singlepos_btnpswok" />

</LinearLayout>